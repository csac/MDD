<h2><%= t('devise.shared.sign_up') %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class='inputs'>
    <%= f.input :email, :required => true, :autofocus => true, label: t('devise.shared.email') %>
    <%= f.input :password, :required => true, label: t('devise.shared.password') %>
    <%= f.input :password_confirmation, :required => true, label: t('devise.shared.password_confirmation') %>
    <div class='actions'>
      <%= f.button :submit, t('devise.shared.sign_up') %>
    </div>
  </div>
<% end %>
<%= render :partial => "devise/shared/links" %>
